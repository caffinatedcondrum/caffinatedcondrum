#include <stdio.h>

#define _CRT_NO_WARNINGS_SECURE_
#define WEIGHT 200
#define MERCURY 37.8
#define VENUS 90.7
#define MARS 37.7
#define JUPITER 236.0
#define SATURN 91.6
#define URANUS 88.9
#define NEPTUNE 112.0


int main(void)
{
    printf("%10|6.1lf\n", "Planet", "Weight");
    printf("%10|6s\n", "---------", "-------");
    printf("%10|6.1lf\n", "Mercury\n", WEIGHT*MERCURY/100.0);
    printf("%10|6s\n", "---------", "-------");
    printf("%10|6.1lf\n", "Venus\n", WEIGHT*VENUS/100.0);
    printf("%10|6s\n", "---------", "-------");
    printf("%10|6.1lf\n", "Mars\n", WEIGHT*MARS/100.0);
    printf("%10|6s\n", "---------", "-------");
    printf("%10|6.1lf\n","Jupiter\n", WEIGHT*JUPITER/100.0);
    printf("%10|6s\n", "---------", "-------");
    printf("%10|6.1lf\n","Saturn\n", WEIGHT*SATURN/100.0);
    printf("%10|6s\n", "---------", "-------");
    printf("%10|6.1lf\n", "Uranus\n", WEIGHT*URANUS/100.0);
    printf("%10|6s\n", "---------", "-------");
    printf("%10|6.1lf\n", "Neptune\n", WEIGHT*NEPTUNE/100.0);


    fopen("csci.txt", "w");

    fprintf("%10|6.1lf\n", "Planet", "Weight");
    fprintf("%10|6s\n", "---------", "-------");
    fprintf("%10|6.1lf\n", "Mercury\n", WEIGHT*MERCURY/100.0);
    fprintf("%10|6s\n", "---------", "-------");
    fprintf("%10|6.1lf\n", "Venus\n", WEIGHT*VENUS/100.0);
    fprintf("%10|6s\n", "---------", "-------");
    fprintf("%10|6.1lf\n", "Mars\n", WEIGHT*MARS/100.0);
    fprintf("%10|6s\n", "---------", "-------");
    fprintf("%10|6.1lf\n","Jupiter\n", WEIGHT*JUPITER/100.0);
    fprintf("%10|6s\n", "---------", "-------");
    fprintf("%10|6.1lf\n","Saturn\n", WEIGHT*SATURN/100.0);
    fprintf("%10|6s\n", "---------", "-------");
    fprintf("%10|6.1lf\n", "Uranus\n", WEIGHT*URANUS/100.0);
    fprintf("%10|6s\n", "---------", "-------");
    fprintf("%10|6.1lf\n", "Neptune\n", WEIGHT*NEPTUNE/100.0);

    fclose("csci.txt");

    return 0;
}

